<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:id="@+id/layout_card"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingHorizontal="8dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                app:cardCornerRadius="6dp"
                android:layout_marginHorizontal="6dp"
                android:layout_height="160dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/img_product"
                    android:src="@drawable/grey_thumb"
                    android:layout_height="match_parent"
                    android:contentDescription="MyImage" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/txt_title"
                    style="@style/text_bold18"
                    android:text="I Phone X"
                    android:textColor="@color/primary"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txt_price"
                    style="@style/text_regular16"
                    android:text="450$"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/txt_discount"
                    style="@style/text_regular16"
                    android:text="12%"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:id="@+id/txt_index"
                    style="@style/text_regular16"
                    android:text="1"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:layout_width="48dp"
        android:layout_gravity="center"
        android:layout_below="@id/rv_product"
        android:id="@+id/progress_more"
        android:visibility="gone"
        android:indeterminateTint="@color/primary"
        android:layout_height="48dp"/>
</LinearLayout>